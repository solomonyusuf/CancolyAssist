@page "/user-support"
@model Cancoly.Pages.Components.Users.SupportModel
@{
    Layout = "_MainLayout";
}
<div class="container-xxl flex-grow-1 container-p-y">
   <div class="row mb-4 mt-2">
        <h4> Support Page </h4>
        <div class="card mb-4">
            <form method="post" class="card-body">
                <div class="mb-2">
                    <label>Write a complaint or report </label>
                    <textarea rows="15" cols="15" class="form-control mt-4"></textarea>
                </div>
                <div class="mb-2">
                    <button class="btn btn-primary" type="submit">
                        Submit Complaint
                    </button>
                </div>

            </form>

        </div>

        </div>
</div>
