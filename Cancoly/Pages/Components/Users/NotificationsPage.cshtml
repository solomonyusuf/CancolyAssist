@page "/user-notifications"
@using Humanizer
@model Cancoly.Pages.Components.Users.NotificationsModel
@{
    Layout = "_MainLayout";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-md-12 col-lg-12 order-2 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title m-0 me-2">Notifications</h5>
                <form method="post" class="float-right">
                    <button class="btn btn-sm btn-primary" type="submit">Mark All As Read</button>
                </form>
            </div>
            <div class="card-body">
                @if (Model.Notifications == null || Model.Notifications.Count() == 0)
                {
                    <h4 class="mb-3"> No Notifications</h4>
                }
                <ul class="p-0 m-0">
                   
                    @foreach (var data in Model.Notifications)
                    {
                        <li class="d-flex mb-4 pb-1">
                            <div class="avatar flex-shrink-0 me-3">
                                <img src="assets/img/front.png" style="height:40px;" alt="User" class="rounded" />
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    <h6 class="mb-0">@data.Title</h6>
                                    <small class="text-muted d-block mb-1">@data.Message</small>
                                    <small class="text-muted d-block mb-1"> @((DateTimeOffset.Now - data.DateCreated).Humanize()) ago</small>

                                </div>

                            </div>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>
