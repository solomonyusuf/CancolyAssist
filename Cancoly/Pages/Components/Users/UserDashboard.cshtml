@page "/user-dashboard"
@model Cancoly.Pages.Components.Users.UserDashboardModel
@{
    Layout = "_MainLayout";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row justify-content-center">
        
        <div class="col-lg-8 col-md-8">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-12  mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="">
                                    <i style="font-size:40px;" class="bx bx-layout"></i>
                                </div>
                                <div class="dropdown">
                                    <button class="btn p-0"
                                            type="button"
                                            id="cardOpt3"
                                            data-bs-toggle="dropdown"
                                            aria-haspopup="true"
                                            aria-expanded="false">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
                                        <a class="dropdown-item" href="/user-brain-scans">View More</a>
                                    </div>
                                </div>
                            </div>
                            <span class="fw-semibold d-block mb-1">Scans</span>
                            <h3 class="card-title mb-2">@Model.scan.ToString("N0")</h3>
                            <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +@Model.scan_percent</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12  mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="">
                                    <i style="font-size:40px;" class="bx bx-collection"></i>
                                </div>
                                <div class="dropdown">
                                    <button class="btn p-0"
                                            type="button"
                                            id="cardOpt6"
                                            data-bs-toggle="dropdown"
                                            aria-haspopup="true"
                                            aria-expanded="false">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
                                        <a class="dropdown-item" href="/all-reports">View More</a>
                                    </div>
                                </div>
                            </div>
                            <span class="fw-semibold d-block mb-1">Reports</span>
                            <h3 class="card-title text-nowrap mb-1">@Model.scan.ToString("N0")</h3>
                            <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +@Model.scan_percent</small>
                        </div>
                    </div>
                </div>
             </div>
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-12  mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="">
                                    <i style="font-size:40px;" class="bx bx-error"></i>
                                </div>
                                <div class="dropdown">
                                    <button class="btn p-0"
                                            type="button"
                                            id="cardOpt4"
                                            data-bs-toggle="dropdown"
                                            aria-haspopup="true"
                                            aria-expanded="false">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt4">
                                        <a class="dropdown-item" href="/user-plans">View Plans</a>
                                    
                                    </div>
                                </div>
                            </div>
                            <span class="fw-semibold d-block mb-1">Quota</span>
                            <h3 class="card-title text-nowrap mb-2">@(!User.IsInRole("Business") ? 100 - Model.quota : "Unlimited")</h3>
                            @if (!User.IsInRole("Business"))
                            {
                                <small class="text-danger fw-semibold"><i class="bx bx-down-arrow-alt"></i> -@Math.Round(Model.quota_percent)%</small>

                            }
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12  mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="">
                                    <i style="font-size:40px;" class="bx bx-credit-card-alt"></i>
                                </div>
                                <div class="dropdown">
                                    <button class="btn p-0"
                                            type="button"
                                            id="cardOpt1"
                                            data-bs-toggle="dropdown"
                                            aria-haspopup="true"
                                            aria-expanded="false">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="cardOpt1">
                                        <a class="dropdown-item" href="/user-payments">View More</a>
                                    </div>
                                </div>
                            </div>
                            <span class="fw-semibold d-block mb-1">Transactions</span>
                            <h3 class="card-title mb-2">₦@Model.balance.ToString("N0")</h3>
                            <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +@Math.Round(Model.balance_percent)%</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title m-0 me-2">Recent Transactions</h5>
                </div>
                <div class="card-body">
                    <ul class="p-0 m-0">
                        @foreach (var data in Model.Transactions)
                        {
                            <li class="d-flex mb-1 border-info">
                                <div class="avatar flex-shrink-0 me-3">
                                    <img src="assets/img/icons/unicons/cc-primary.png" alt="User" class="rounded" />
                                </div>
                                <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                    <div class="me-2">
                                        <small class="text-muted d-block mb-1">@data.Channel.ToUpper()</small>
                                        <h6 class="mb-0">@data.Service</h6>
                                    </div>
                                    <div class="user-progress d-flex align-items-center gap-1">
                                        <h6 class="mb-0 text-danger">-@data.Amount.ToString("N0")</h6>
                                        <span class="text-muted">NGN</span>
                                    </div>
                                </div>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </div>
  
    </div>
</div>

