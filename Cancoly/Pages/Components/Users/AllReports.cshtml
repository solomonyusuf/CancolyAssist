@page "/user-reports"
@model Cancoly.Pages.Components.Users.AllReportsModel
@{
    Layout = "_MainLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card bg-plane shadow-none position-relative overflow-hidden mb-4">
        <div class="card-body px-4 py-3">
            <div class="row align-items-center">
                <div class="col-9">
                    <h4 class="fw-semibold mb-8 text-white">All Reports</h4>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a class="text-muted text-decoration-none" href="/dashboard">Dashboard</a>
                            </li>
                            <li class="breadcrumb-item text-white" aria-current="page">All Reports</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-3">
                    <div class="text-center mb-n5">
                        <img src="assets/img/brain.png" class="img-fluid mb-n4">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="card mb-4">

            <div class="card-body table-responsive">
                <table id="table" class="display table" style="width:100%">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Report</th>
                            <th>Time Stamp</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.brainScans != null)
                        {
                            @foreach (var data in @Model.brainScans)
                            {
                                <tr>
                                    <td>@data.Title</td>
                                    <td>
                                        <a href="/user-scan-report?id=@data.Id" class="btn btn-primary text-white">Report</a>
                                    </td>
                                    <td>@data.DateCreated</td>
                                </tr>
                            }
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
