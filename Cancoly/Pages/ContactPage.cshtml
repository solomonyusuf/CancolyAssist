@page "/contact"
@model Cancoly.Pages.ContactPageModel
@{
}
<!--========================== Banner Section Start ==========================-->
<section class="banner__area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="banner__topbar">
                    <div class="banner__title">
                        <h2>Get In touch <span>with us</span></h2>
                    </div>
                     
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="banner__thumb">
                    <iframe src="" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<!--========================== Banner Section End ==========================-->

<!--========================== Contact Info Section Start ==========================-->
<section class="contact__info">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="contact__info__single">
                    <span><i class="fa-solid fa-phone"></i></span>
                    <h4>Phone Number</h4>
                    <p>
                        <a href="tel:+2348093723842">+2348093723842</a>
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="contact__info__single">
                    <span><i class="fa-solid fa-envelope"></i></span>
                    <h4>Email Address</h4>
                    <p><a href="mailto:info@cancoly.com">info@cancoly.com</a> </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="contact__info__single">
                    <span><i class="fa-solid fa-location-dot"></i></span>
                    <h4>Our Location</h4>
                    <p>LASU Road, Ojo lagos state.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!--========================== Contact Info Section End ==========================-->

<!--========================== Contact Form Section Start ==========================-->
<section class="contact__form">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                 
                <div class="contact__form__title aos-init" data-aos="zoom-in-up" data-aos-delay="400" data-aos-duration="1400">
                    <h2>It is Time to <span>Reach Out</span></h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__main">
                    <form method="POST">
                        <div class="row g-5">
                            <div class="col-lg-6 col-md-6">
                                <div class="contact__form__main__single">
                                    <label for="inputName" class="form-label form--label">Full
                                        Name</label>
                                    <input type="text" class="form-control form--control" id="inputName" name="name" placeholder="Enter Name" required="">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="contact__form__main__single">
                                    <label for="inputEmail" class="form-label form--label">Email
                                        Address</label>
                                    <input type="email" class="form-control form--control" id="inputEmail" name="email" placeholder="Enter Email" required="">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="contact__form__main__single">
                                    <label for="inputNumber" class="form-label form--label">Phone
                                        Number</label>
                                    <input type="text" class="form-control form--control" id="inputNumber" name="phone" placeholder="Phone Number" required="">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="contact__form__main__single">
                                    <label for="inputSubject" class="form-label form--label">Subject</label>
                                    <input type="text" class="form-control form--control" id="inputSubject" name="subject" placeholder="Enter Subject" required="">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="contact__form__main__single">
                                    <label for="inputMessage" class="form-label form--label">Message</label>
                                    <textarea class="form-control form--control" id="inputMessage" name="message" placeholder="Type Message" required=""></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="contact__form__main__single">
                                    <button type="submit" class="common__btn"><span>Submit
                                            Now</span><span><i class="fa-solid fa-arrow-right"></i></span></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>
<!--========================== Contact Form Section End ==========================-->

</div>